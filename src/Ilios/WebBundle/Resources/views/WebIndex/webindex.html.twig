{#
/**
 * @file
 * Default template web index.html file
 *
 * Available variables:
 * - $base_url: The Ilios base URL.
 * - $metas:    Array of meta tags to create
 * - $links:    Array of link tags to create
 * - $scripts:  Array of script tags to create
 */
#}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ilios</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% for m in metas %}
        <meta name="{{ m.name }}" content="{{ m.content }}" />
    {% endfor %}
    <meta name='iliosconfig-api-name-space'content='api/v1'>
    <meta name='iliosconfig-api-host'content=''>

    {% for s in styles %}
        <style type="{{ s.type }}">
            {% autoescape false %}
            {{ s.content }}
            {% endautoescape %}
        </style>
    {% endfor %}

    {% for l in links %}
        <link rel="{{ l.rel }}" href="{{ preload(asset(l.href), { as: 'style' }) }}" />
    {% endfor %}
    <link rel="stylesheet" href="{{ preload(asset('theme-overrides/custom.css'), { as: 'style'}) }}" />
</head>
<body>

{% for n in noScripts %}
    <noscript>
        {% autoescape false %}
        {{ n.htmlContent }}
        {% endautoescape %}
    </noscript>
{% endfor %}

{% for d in divs %}
    <div id="{{ d.id }}" class="{{ d.class }}">
        {% autoescape false %}
        {{ d.htmlContent }}
        {% endautoescape %}
    </div>
{% endfor %}


{% for s in scripts %}
    {% if s.src %}
        <script src="{{ preload(asset(s.src), { as: 'script' }) }}"></script>
    {% else %}
        <script>
            {% autoescape false %}
                {{ s.content }}
            {% endautoescape %}
        </script>
    {% endif %}
{% endfor %}

</body>
</html>
