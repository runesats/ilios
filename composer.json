{
  "name": "ilios/ilios",
  "license": "MIT",
  "type": "project",
  "description": "The \"Ilios Standard Edition\" distribution",
  "require": {
    "php": ">= 7.2",
    "ext-apcu": "*",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-zlib": "*",
    "alchemy/zippy": "^0.4.8",
    "danielstjules/stringy": "^3.1",
    "doctrine/doctrine-bundle": "^1.6",
    "doctrine/doctrine-fixtures-bundle": "^3.0",
    "doctrine/doctrine-migrations-bundle": "^1.0",
    "doctrine/orm": "^2.5",
    "dreamscapes/ldap-core": "^3.1",
    "easycorp/easy-log-handler": "^1.0",
    "eluceo/ical": "0.12.1",
    "exercise/htmlpurifier-bundle": "^V2.0.1",
    "firebase/php-jwt": "@stable",
    "happyr/google-analytics-bundle": "^4.0",
    "ilios/mesh-parser": "^2.0",
    "liip/monitor-bundle": "^2.6",
    "nelmio/cors-bundle": "^1.5",
    "php-http/guzzle6-adapter": "^1.1",
    "php-http/httplug-bundle": "^1.3",
    "psr/log": "1.0.0",
    "swagger-api/swagger-ui": "^3.0",
    "symfony/apache-pack": "^1.0",
    "symfony/asset": "*",
    "symfony/console": "*",
    "symfony/flex": "^1.1",
    "symfony/framework-bundle": "*",
    "symfony/monolog-bundle": "^3.1.0",
    "symfony/requirements-checker": "^1.1",
    "symfony/security-bundle": "*",
    "symfony/swiftmailer-bundle": "^3.2",
    "symfony/twig-bundle": "*",
    "symfony/validator": "*",
    "symfony/yaml": "*"
  },
  "require-dev": {
    "fzaninotto/faker": "@stable",
    "liip/functional-test-bundle": "2.0.0-alpha6",
    "mockery/mockery": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "symfony/dotenv": "*",
    "symfony/phpunit-bridge": "@stable",
    "symfony/profiler-pack": "^1.0",
    "symfony/web-server-bundle": "*"
  },
  "config": {
    "platform": {
      "php": "7.2.0"
    },
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd",
      "requirements-checker": "script"
    },
    "ilios-scripts": [
      "AppBundle\\Composer\\MigrateParameters::migrate",
      "AppBundle\\Composer\\CheckRequiredENV::check"
    ],
    "post-install-cmd": [
      "@auto-scripts",
      "@ilios-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts",
      "@ilios-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "4.1.*"
    }
  }
}
